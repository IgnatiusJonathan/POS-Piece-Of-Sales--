generator client {
  provider   = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
   url      = env("DATABASE_URL")
}

model Worker {
  id       Int    @id @default(autoincrement()) 
  nama     String
  email    String
  password String
}

model Product {
  id    Int     @id @default(autoincrement()) 
  nama  String
  jenis String
  stok  Int     
  harga Int     
  image String?
}

model History {
  id      Int      @id @default(autoincrement()) 
  product String
  jumlah  Int      
  harga   Int      
  tanggal DateTime @default(now()) 
  pembeli String
  kasier  String
}

model Member {
  id      Int      @id @default(autoincrement()) 
  name    String
  tanggal DateTime @default(now()) 
  noTelp  String   
  email   String
}


